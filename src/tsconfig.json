        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "../../node_modules/@types"
        ],
        "lib": [
            "es2018"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "./**/*.ts"
    ]
}
